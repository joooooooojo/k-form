{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["node", "vite/client", "element-plus/global"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "packages/**/**/*",
    "packages/**/*",
    "src/*.ts",
    "src/*.tsx",
    "src/*.vue",
    "vite.config.ts",
    "volar.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
